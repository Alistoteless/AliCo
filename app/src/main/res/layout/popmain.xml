<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical|clip_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:fontFamily="casual"
                android:text="AliCo Bilgiler;"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="30dp" />

            <TextView
                android:id="@+id/txtp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Sol üstteki GoogleMaps simgesi ile haritaya hızlıca ulaşabilirsiniz."
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText,RtlHardcoded"
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="272dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text='"Elipsoit Ekle" Ekranında kendi belirleyeceğiniz eksen değerleriyle tanımlı elipsoitler oluşturabilir ve bu elipsoitler ile de dönüştürme yapabilirsiniz.'
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="75dp"
                tools:layout_editor_absoluteY="413dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text='"Koordinat Dönüştür" Ekranı ile tanımlı elipsoitler üzerinden koordinatları farklı sistemlere dönüştürebilirsiniz. '
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="12sp"
                android:textStyle="bold|italic"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="67dp"
                tools:layout_editor_absoluteY="327dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text='Ayrıca "Koordinat Dönüştür" ekranında, kendi girdiğiniz ya da sonradan dönüştürdüğünüz coğrafi koordinatlar ile ilgili noktayı GoogleMaps üzerinde görebilirsiniz.'
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:ignore="HardcodedText"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="440dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
