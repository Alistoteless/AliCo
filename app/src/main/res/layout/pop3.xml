<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="casual"
                android:text="Dönüştürücü Hakkında!"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Dönüştüreceğiniz sistemleri soldaki listelerde belirleyiniz. "
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text='Elipsoit seçim sekmesinin sağındaki simge ile seçili elipsoidin parametrelerini görebilirsiniz. Elipsoitlerin ait olduğu Datumlar parantez "( )" içinde gösterilmiştir.'
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Coğrafi koordinatlarını girdiğiniz noktayı GoogleMaps simgesi ile haritada görüntüleyebilirsiniz. Farklı bir sistemden coğrafi koordinatlara çevireceğiniz nokta koordinatları için de sonuçların yanında oluşan yeni GoogleMaps butonu ile de noktayı görüntüleyebilirsiniz."
                android:textAlignment="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aşağıda da gösterildiği gibi enlem değerleri -90 ile +90 derece arasında boylam değerleri ise -180 ile +180 derece arasında olmalıdır. Örneğin Güney yarım kürede bir noktanın enlemi '-' değerdedir."
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textColor="@android:color/holo_red_light" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="198dp"
                android:src="@drawable/lattlaongg" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>